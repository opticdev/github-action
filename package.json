{
  "name": "@useoptic/github-action",
  "version": "0.0.0",
  "scripts": {
    "clean": "rm -rf build && rm -f tsconfig.tsbuildinfo",
    "build": "yarn run tsc --build --verbose",
    "ci:build": "yarn build",
    "test": "ENVIRONMENT=test yarn jest",
    "ci:test": "yarn test",
    "lint": "eslint src --max-warnings 0 --ext .js,.ts && prettier --check 'src/**/*.(js|jsx|ts|tsx|json|css)'",
    "ci:lint": "yarn lint",
    "format": "prettier --write 'src/**/*.(js|jsx|ts|tsx|json|css)'"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:jest/recommended",
      "plugin:import/recommended"
    ]
  },
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "/build"
  ],
  "devDependencies": {
    "@babel/eslint-parser": "^7.18.2",
    "@types/jest": "^28.1.3",
    "@types/node": "^17.0.15",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.8.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^26.1.0",
    "jest": "^27.5.1",
    "nanoid": "^3.0.0",
    "prettier": "^2.5.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@actions/core": "^1.9.0",
    "@actions/exec": "^1.1.1"
  }
}
